{
  "dashboard": {
    "title": "Mac Studio Cluster Dashboard",
    "tags": ["cluster", "mac-studio", "ray"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "system_cpu_percent",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "system_memory_percent",
            "legendFormat": "Memory %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Ray Cluster Nodes",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "ray_nodes_count",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        }
      },
      {
        "id": 4,
        "title": "Ray CPUs Available",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "ray_cpus_available",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Ray GPUs Available",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "ray_gpus_available",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Service Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "face_detection_status",
            "format": "table",
            "refId": "A"
          },
          {
            "expr": "embedding_status",
            "format": "table",
            "refId": "B"
          },
          {
            "expr": "llm_status",
            "format": "table",
            "refId": "C"
          },
          {
            "expr": "admin_status",
            "format": "table",
            "refId": "D"
          }
        ]
      },
      {
        "id": 7,
        "title": "Disk Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "system_disk_percent",
            "legendFormat": "Disk %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ]
      }
    ]
  }
}
